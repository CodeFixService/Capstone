@page
@model SmartFlow.Web.Pages.Admin.Bitacora.IndexModel
@{
    ViewData["Title"] = "Registro de Bitácora";
}

<h2 class="mb-3 text-center">Registro de Bitácora del Sistema</h2>

<table class="table table-bordered table-hover align-middle shadow-sm">
    <thead class="table-primary text-center">
        <tr>
            <th>Fecha</th>
            <th>Usuario</th>
            <th>Módulo</th>
            <th>Acción</th>
            <th>Detalle</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ListaBitacora != null && Model.ListaBitacora.Count > 0)
        {
            foreach (var log in Model.ListaBitacora)
            {
                <tr>
                    <td>@log.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@log.Usuario</td>
                    <td>@log.Modulo</td>
                    <td>
                        @if (log.Accion == "Creación")
                        {
                            <span class="badge bg-success">Creación</span>
                        }
                        else if (log.Accion == "Edición")
                        {
                            <span class="badge bg-warning text-dark">Edición</span>
                        }
                        else if (log.Accion == "Eliminación")
                        {
                            <span class="badge bg-danger">Eliminación</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@log.Accion</span>
                        }
                    </td>
                    <td>@log.Detalle</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No hay registros en la bitácora.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="/Admin/Index" class="btn btn-secondary">
    <i class="bi bi-arrow-left-circle"></i> Volver al panel
</a>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
