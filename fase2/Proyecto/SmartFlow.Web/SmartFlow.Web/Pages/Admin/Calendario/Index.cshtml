@page
@model SmartFlow.Web.Pages.Admin.Calendario.IndexModel
@{
    ViewData["Title"] = "Calendario Global de Reservas";
}

<div class="container-fluid py-4" style="max-width: 95%; margin: auto;">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-center text-white fw-semibold"
             style="background: linear-gradient(90deg, #007bff, #00b4d8); font-size: 1.4rem;">
            @ViewData["Title"]
        </div>
        <div class="row mb-3">

            <div class="col-md-4">
                <label class="form-label fw-bold">Filtrar por Estado</label>
                <select id="filtroEstado" class="form-select">
                    <option value="">Todas</option>
                    <option value="Aprobada">Aprobada</option>
                    <option value="Rechazada">Rechazada</option>
                    <option value="Pendiente">Pendiente</option>
                </select>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-bold">Filtrar por Servicio</label>
                <select id="filtroServicio" class="form-select">
                    <option value="">Todos</option>
                    @foreach (var s in Model.Servicios)
                    {
                        <option value="@s.Id">@s.Nombre</option>
                    }
                </select>
            </div>

        </div>


        <div class="card-body bg-white" style="padding: 2%; min-height: 75vh;">
            <div id="calendar"></div>
        </div>

        
    </div>
</div>

<!-- 🔹 Modal de Detalle de Reserva -->
<div class="modal fade" id="detalleReserva" tabindex="-1" aria-labelledby="detalleReservaLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-lg border-0">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-semibold" id="detalleReservaLabel">Detalle de la Reserva</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body" id="detalleReservaBody">
                <!-- Aquí se insertan los detalles desde JS -->
            </div>

            <!-- 🔸 Comentario del administrador -->
            <div class="px-3 pb-3">
                <label for="comentarioAdmin" class="form-label fw-semibold">Comentario del Administrador (opcional)</label>
                <textarea id="comentarioAdmin" class="form-control rounded-3" rows="3"
                          placeholder="Escribe un comentario o nota para el usuario..."></textarea>
            </div>

            <div class="modal-footer d-flex justify-content-between">
                <div class="btn-group">
                    <button type="button" id="btnAprobar" class="btn btn-success px-3">
                        <i class="bi bi-check-circle"></i> Aprobar
                    </button>
                    <button type="button" id="btnRechazar" class="btn btn-danger px-3">
                        <i class="bi bi-x-circle"></i> Rechazar
                    </button>
                    <button type="button" id="btnPendiente" class="btn btn-warning text-dark px-3">
                        <i class="bi bi-hourglass-split"></i> Pendiente
                    </button>
                </div>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>
    <script>
        var calendar; // 🔵 variable global
    </script>

    <script>
                document.getElementById("filtroEstado").addEventListener("change", function () {
                if (calendar) calendar.refetchEvents();
                });

                document.getElementById("filtroServicio").addEventListener("change", function () {
                 if (calendar) calendar.refetchEvents();
                });

            document.addEventListener('DOMContentLoaded', function () {
        var calendarEl = document.getElementById('calendar');
            calendar = new FullCalendar.Calendar(calendarEl, {
                    initialView: 'dayGridMonth',
                locale: 'es', // idioma español
                buttonText: {
                    today: 'Hoy',
                    month: 'Mes',
                    week: 'Semana',
                    day: 'Día',
                    list: 'Lista'
                },
                allDayText: 'Todo el día',
                noEventsText: 'No hay eventos para mostrar',
                weekText: 'Sem',
                eventLimitText: 'más',
                dayHeaderFormat: { weekday: 'long' },
                height: 'auto',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                    events: function (fetchInfo, successCallback, failureCallback) {

                        const estado = document.getElementById("filtroEstado").value;
                        const servicio = document.getElementById("filtroServicio").value;

                        let url = "?handler=Eventos";

                        if (estado) url += "&estado=" + estado;
                        if (servicio) url += "&servicioId=" + servicio;

                        fetch(url)
                            .then(response => response.json())
                            .then(data => successCallback(data))
                            .catch(error => failureCallback(error));
                    },
                        eventClick: function (info) {
                    eventoSeleccionadoId = info.event.id;

                    document.getElementById('detalleReservaBody').innerHTML = `
                        <p><strong>Usuario:</strong> ${info.event.extendedProps.usuario}</p>
                        <p><strong>Servicio:</strong> ${info.event.extendedProps.servicio}</p>
                        <p><strong>Inicio:</strong> ${new Date(info.event.start).toLocaleString()}</p>
                        <p><strong>Fin:</strong> ${new Date(info.event.end).toLocaleString()}</p>
                        <p><strong>Estado actual:</strong> <span class="badge bg-${
                            info.event.extendedProps.estado === 'Aprobada' ? 'success' :
                            info.event.extendedProps.estado === 'Rechazada' ? 'danger' : 'warning text-dark'
                        }">${info.event.extendedProps.estado}</span></p>
                                <p><strong>Comentario del Estudiante:</strong>
            ${info.event.extendedProps.comentarioUsuario ?? "Sin comentario"}
        </p>

        <p><strong>Comentario:</strong>
            ${info.event.extendedProps.comentarioAdmin ?? "Sin comentarios previos"}
        </p>

                    `;

                    document.getElementById('comentarioAdmin').value = "";
                    new bootstrap.Modal(document.getElementById('detalleReserva')).show();
                }
            });

            calendar.render();

            // Actualizar estado con comentario
            async function actualizarEstado(id, estado) {
                const comentario = document.getElementById('comentarioAdmin').value;
                const formData = new FormData();
                formData.append('id', id);
                formData.append('estado', estado);
                formData.append('comentarioAdmin', comentario);

                const resp = await fetch('/Admin/Calendario?handler=ActualizarEstado', {
                    method: 'POST',
                    body: formData
                });

                const data = await resp.json();
                        if (data.success) {
            // 🔹 Crear alerta Bootstrap visual
            const alerta = document.createElement('div');
            alerta.className = `alert alert-success text-center fw-semibold shadow-sm rounded-4 position-fixed top-0 start-50 translate-middle-x mt-3`;
            alerta.style.zIndex = '9999';
            alerta.innerHTML = `✅ Reserva ${estado.toLowerCase()} correctamente.`;
            document.body.appendChild(alerta);

            setTimeout(() => alerta.remove(), 3000); // desaparece en 3s

            // 🔹 Cerrar modal y refrescar eventos
            bootstrap.Modal.getInstance(document.getElementById('detalleReserva')).hide();
            calendar.refetchEvents();
        }
         else {
                    alert(data.message || 'Error al actualizar la reserva.');
                }
            }

            document.getElementById('btnAprobar').addEventListener('click', () => actualizarEstado(eventoSeleccionadoId, 'Aprobada'));
            document.getElementById('btnRechazar').addEventListener('click', () => actualizarEstado(eventoSeleccionadoId, 'Rechazada'));
            document.getElementById('btnPendiente').addEventListener('click', () => actualizarEstado(eventoSeleccionadoId, 'Pendiente'));
        });
    </script>
    <script>
        setInterval(() => {
            if (calendar) {
                calendar.refetchEvents(); //  SOLO ACTUALIZA EL ESTADO, NO rompe nada
            }
        }, 10000);
    </script>


}
