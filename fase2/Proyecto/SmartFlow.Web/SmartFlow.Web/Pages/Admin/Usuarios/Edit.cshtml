@page "{id:int}"
@model SmartFlow.Web.Pages.Admin.Usuarios.EditModel
@{
    ViewData["Title"] = "Modificar Usuario";
}

<h2 class="text-center mb-4 fw-semibold">✏️ Modificar Usuario</h2>

<div class="card shadow-lg border-0 rounded-4">
    <div class="card-header text-white fw-semibold"
         style="background: linear-gradient(90deg, #007bff, #00b4d8); font-size: 1.2rem;">
        Editar información del usuario
    </div>

    <div class="card-body bg-white">
        <form method="post">
            <input type="hidden" asp-for="Usuario.Id" />

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Usuario.Nombre" class="form-label fw-semibold"></label>
                    <input asp-for="Usuario.Nombre" class="form-control" />
                    <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Usuario.Correo" class="form-label fw-semibold"></label>
                    <input asp-for="Usuario.Correo" class="form-control" />
                    <span asp-validation-for="Usuario.Correo" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Usuario.Rol" class="form-label fw-semibold"></label>
                    <select asp-for="Usuario.Rol" class="form-select">
                        <option value="Admin">Admin</option>
                        <option value="Director">Director</option>
                        <option value="Coordinador">Coordinador</option>
                        <option value="Usuario">Usuario</option>
                    </select>
                    <span asp-validation-for="Usuario.Rol" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Usuario.CarreraId" class="form-label fw-semibold">Carrera</label>
                    <select asp-for="Usuario.CarreraId" class="form-select"
                            asp-items="Model.CarrerasSelectList">
                        <option value="">Seleccione una carrera</option>
                    </select>
                    <span asp-validation-for="Usuario.CarreraId" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Usuario.Rut" class="form-label fw-semibold"></label>
                <input asp-for="Usuario.Rut" class="form-control" />
                <span asp-validation-for="Usuario.Rut" class="text-danger"></span>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Nueva Contraseña</label>
                    <input asp-for="Usuario.Password" type="password" class="form-control" id="password" placeholder="Deja en blanco si no deseas cambiarla" />
                    <span asp-validation-for="Usuario.Password" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Confirmar Contraseña</label>
                    <input type="password" class="form-control" id="confirmPassword" placeholder="Repite la nueva contraseña" />
                    <span class="text-danger" id="passwordError"></span>
                </div>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-page="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-save"></i> Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
