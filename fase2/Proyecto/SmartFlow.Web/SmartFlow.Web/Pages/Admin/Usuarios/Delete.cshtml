@page "{id:int}"
@model SmartFlow.Web.Pages.Admin.Usuarios.DeleteModel
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2 class="text-danger mb-3">Confirmar eliminación</h2>

<div class="alert alert-warning">
    <strong>¿Estás seguro de eliminar este usuario?</strong>
    <p>Esta acción no se puede deshacer por el momento.</p>
</div>

<div class="border rounded p-4 bg-light mb-3">
    <dl class="row mb-0">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Usuario.Id</dd>

        <dt class="col-sm-3">RUT</dt>
        <dd class="col-sm-9">@Model.Usuario.Rut</dd>

        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Usuario.Nombre</dd>

        <dt class="col-sm-3">Correo</dt>
        <dd class="col-sm-9">@Model.Usuario.Correo</dd>

        <dt class="col-sm-3">Rol</dt>
        <dd class="col-sm-9">@Model.Usuario.Rol</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Usuario.Id" />
    <button type="submit" class="btn btn-danger me-2">Eliminar definitivamente</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
