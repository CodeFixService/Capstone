@page
@model SmartFlow.Web.Pages.Admin.Ayuda.IndexModel
@{
    ViewData["Title"] = "Ayuda - Conversaciones";
}
<h2 class="mb-3">💬 Conversaciones</h2>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Usuario</th>
            <th>Último mensaje</th>
            <th>Fecha</th>
            <th>Sin leer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.Conversaciones)
        {
            <tr>
                <td>@c.Nombre</td>
                <td>@c.UltimoTexto</td>
                <td>@c.FechaUltimo:g</td>
                <td>
                    @if (c.NoLeidos > 0)
                    {
                        <span class="badge bg-danger">@c.NoLeidos</span>
                    }
                    else
                    {

                        <span class="text-muted">0</span>
                    }
                </td>
                <td><a class="btn btn-sm btn-primary" asp-page="/Admin/Ayuda/Ver" asp-route-usuarioId="@c.UsuarioId">Abrir</a></td>
            </tr>
        }
    </tbody>
</table>
