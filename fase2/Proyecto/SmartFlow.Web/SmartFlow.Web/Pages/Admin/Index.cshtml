@page
@model SmartFlow.Web.Pages.Admin.IndexModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

@{
    ViewData["Title"] = "Panel del Administrador";
    var nombre = HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre");
}

<h2>Bienvenido, @nombre 👋</h2>
<p>Has iniciado sesión correctamente como <strong>Administrador</strong>.</p>

<hr class="my-4" />
<h3 class="mb-3 mt-4">📊 Resumen del Sistema</h3>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 text-center">

    <div class="col">
        <a asp-page="/Admin/Usuarios/Index" class="text-decoration-none">
            <div class="card text-white bg-primary shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-people" style="font-size:2rem;"></i>
                    <h5 class="mt-2">Usuarios</h5>
                    <h3>@Model.TotalUsuarios</h3>
                </div>
            </div>
        </a>
    </div>

    <div class="col">
        <a asp-page="/Admin/Calendario/Index" class="text-decoration-none">
            <div class="card text-white bg-success shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-calendar-check" style="font-size:2rem;"></i>
                    <h5 class="mt-2">Reservas</h5>
                    <h3>@Model.TotalReservas</h3>
                </div>
            </div>
        </a>
    </div>

    <div class="col">
        <a asp-page="/Admin/Reservas/Index" class="text-decoration-none">
            <div class="card text-dark bg-warning shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-hourglass-split" style="font-size:2rem;"></i>
                    <h5 class="mt-2">Pendientes</h5>
                    <h3>@Model.Pendientes</h3>
                </div>
            </div>
        </a>
    </div>

    <div class="col">
        <a asp-page="/Admin/Solicitudes/Index" class="text-decoration-none">
            <div class="card text-white bg-primary shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-file-earmark-text" style="font-size:2rem;"></i>
                    <h5 class="mt-2">Solicitudes Totales</h5>
                    <h3>@Model.TotalSolicitudes</h3>
                </div>
            </div>
        </a>
    </div>

    <div class="col">
        <a asp-page="/Admin/Solicitudes/Index" class="text-decoration-none">
            <div class="card text-white bg-warning shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-hourglass-split" style="font-size:2rem;"></i>
                    <h5 class="mt-2">Solicitudes Pendientes</h5>
                    <h3>@Model.PendientesSolicitudes</h3>
                </div>
            </div>
        </a>
    </div>

    <div class="col">
        <a asp-page="/Admin/Ayuda/Index" class="text-decoration-none">
            <div class="card text-white bg-info shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-chat-dots-fill" style="font-size:2rem;"></i>
                    <h5 class="mt-2">Chats sin leer</h5>
                    <h3>@Model.ChatsSinLeer</h3>
                </div>
            </div>
        </a>
    </div>

    <div class="col">
        <a asp-page="/Admin/Ayuda/Index" class="text-decoration-none">
            <div class="card text-white bg-success shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-people-fill" style="font-size:2rem;"></i>
                    <h5 class="mt-2">Usuarios con Ayuda</h5>
                    <h3>@Model.AyudasTotales</h3>
                </div>
            </div>
        </a>
    </div>

</div>
