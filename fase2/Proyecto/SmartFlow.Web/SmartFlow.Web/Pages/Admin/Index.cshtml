@page
@model SmartFlow.Web.Pages.Admin.IndexModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

@{
    ViewData["Title"] = "Panel del Administrador";
    var nombre = HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre");
}

<h2>Bienvenido, @nombre 👋</h2>
<p>Has iniciado sesión correctamente como <strong>Administrador</strong>.</p>

<hr class="my-4" />

<h3 class="mb-3">📊 Resumen del Sistema</h3>

<div class="row g-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary shadow-sm text-center">
            <div class="card-body">
                <i class="bi bi-people" style="font-size:2rem;"></i>
                <h5 class="mt-2">Usuarios</h5>
                <h3>@Model.TotalUsuarios</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success shadow-sm text-center">
            <div class="card-body">
                <i class="bi bi-calendar-check" style="font-size:2rem;"></i>
                <h5 class="mt-2">Reservas</h5>
                <h3>@Model.TotalReservas</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-dark bg-warning shadow-sm text-center">
            <div class="card-body">
                <i class="bi bi-hourglass-split" style="font-size:2rem;"></i>
                <h5 class="mt-2">Pendientes</h5>
                <h3>@Model.Pendientes</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-danger shadow-sm text-center">
            <div class="card-body">
                <i class="bi bi-bell-fill" style="font-size:2rem;"></i>
                <h5 class="mt-2">Notificaciones</h5>
                <h3>@Model.NotificacionesSinLeer</h3>
            </div>
        </div>
    </div>
</div>
