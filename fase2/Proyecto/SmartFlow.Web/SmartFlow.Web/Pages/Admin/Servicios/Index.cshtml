@page
@model SmartFlow.Web.Pages.Admin.Servicios.IndexModel
@{
    ViewData["Title"] = "Mantenedor de Servicios";
}

<h2 class="mb-3">Servicios Registrados</h2>

<a asp-page="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Nuevo Servicio
</a>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Activo</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ListaServicios != null && Model.ListaServicios.Count > 0)
        {
            foreach (var servicio in Model.ListaServicios)
            {
                <tr>
                    <td>@servicio.Id</td>
                    <td>@servicio.Nombre</td>
                    <td>@servicio.Descripcion</td>
                    <td>$@string.Format("{0:N0}", servicio.Precio)</td>
                    <td>
                        @if (servicio.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-page="Details" asp-route-id="@servicio.Id" class="btn btn-sm btn-outline-info me-1" title="Detalles">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-page="Edit" asp-route-id="@servicio.Id" class="btn btn-sm btn-outline-warning me-1" title="Editar">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@servicio.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No hay servicios registrados.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
