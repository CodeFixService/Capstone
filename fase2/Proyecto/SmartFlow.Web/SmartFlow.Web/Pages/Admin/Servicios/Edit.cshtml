@page "{id:int}"
@model SmartFlow.Web.Pages.Admin.Servicios.EditModel
@{
    ViewData["Title"] = "Editar Servicio";
}

<h2 class="mb-3">Editar Servicio</h2>

<form method="post" class="border rounded p-4 shadow-sm">
    <input type="hidden" asp-for="Servicio.Id" />

    <div class="mb-3">
        <label asp-for="Servicio.Nombre" class="form-label">Nombre</label>
        <input asp-for="Servicio.Nombre" class="form-control" />
        <span asp-validation-for="Servicio.Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Servicio.Descripcion" class="form-label">Descripción</label>
        <textarea asp-for="Servicio.Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Servicio.Descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Servicio.Precio" class="form-label">Precio ($)</label>
        <input asp-for="Servicio.Precio" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Servicio.Precio" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Servicio.Activo" class="form-check-input" />
        <label asp-for="Servicio.Activo" class="form-check-label">Activo</label>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="bi bi-save"></i> Guardar Cambios
    </button>
    <a asp-page="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
