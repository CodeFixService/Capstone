@page "{id:int}"
@model SmartFlow.Web.Pages.Admin.Carreras.DetailsModel
@{
    ViewData["Title"] = "Detalles de la Carrera";
}

<h2 class="mb-3">Detalles de la Carrera</h2>

<div class="border rounded p-4 shadow-sm bg-light">
    <dl class="row mb-0">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Carrera.Id</dd>

        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Carrera.Nombre</dd>

        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.Carrera.Descripcion</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-page="Edit" asp-route-id="@Model.Carrera.Id" class="btn btn-warning me-2">Editar</a>
    <a asp-page="Index" class="btn btn-secondary">Volver al listado</a>
</div>
