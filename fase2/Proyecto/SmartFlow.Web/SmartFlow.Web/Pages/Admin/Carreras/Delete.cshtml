@page "{id:int}"
@model SmartFlow.Web.Pages.Admin.Carreras.DeleteModel
@{
    ViewData["Title"] = "Eliminar Carrera";
}

<h2 class="text-danger mb-3">Confirmar eliminación</h2>

<div class="alert alert-warning">
    <strong>¿Estás seguro de eliminar esta carrera?</strong>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div class="border rounded p-4 bg-light mb-3">
    <dl class="row mb-0">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Carrera.Id</dd>

        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Carrera.Nombre</dd>

        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.Carrera.Descripcion</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Carrera.Id" />
    <button type="submit" class="btn btn-danger me-2">Eliminar definitivamente</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
