@page
@model SmartFlow.Web.Pages.Admin.Aranceles.IndexModel
@{
    ViewData["Title"] = "Mantenedor de Aranceles";
}

<h2 class="mb-3">Aranceles Registrados</h2>

<a asp-page="Create" class="btn btn-primary mb-3">
    <i class="bi bi-cash-coin"></i> Nuevo Arancel
</a>

<!-- 🔹 Filtros superiores -->
<form method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <input type="text" name="Busqueda" value="@Model.Busqueda" class="form-control" placeholder="Buscar por nombre o descripción..." />
    </div>

    <div class="col-md-3">
        <select name="CarreraId" class="form-select">
            <option value="">Todas las carreras</option>
            @foreach (var c in Model.Carreras)
            {
                <option value="@c.Value" selected="@(Model.CarreraId == int.Parse(c.Value))">@c.Text</option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <select name="TipoArancel" class="form-select">
            <option value="">Todos los tipos</option>
            @foreach (var t in Model.Tipos)
            {
                <option value="@t" selected="@(Model.TipoArancel == t)">@t</option>
            }
        </select>
    </div>

    <div class="col-md-2 d-flex">
        <button type="submit" class="btn btn-primary w-100 me-2">Buscar</button>
        <a href="/Admin/Aranceles/Index" class="btn btn-outline-secondary w-100">Limpiar</a>
    </div>
</form>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Monto</th>
            <th>Descripción</th>
            <th>Carrera</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ListaAranceles != null && Model.ListaAranceles.Count > 0)
        {
            foreach (var arancel in Model.ListaAranceles)
            {
                <tr>
                    <td>@arancel.Id</td>
                    <td>@arancel.Nombre</td>
                    <td>$@string.Format("{0:N0}", arancel.Monto)</td>
                    <td>@arancel.Descripcion</td>
                    <td>@arancel.Carrera?.Nombre</td>
                    <td class="text-center">
                        <a asp-page="Details" asp-route-id="@arancel.Id" class="btn btn-sm btn-outline-info me-1" title="Detalles">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-page="Edit" asp-route-id="@arancel.Id" class="btn btn-sm btn-outline-warning me-1" title="Editar">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@arancel.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">No hay aranceles registrados.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
