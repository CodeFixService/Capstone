@page "{id:int}"
@model SmartFlow.Web.Pages.Admin.Aranceles.DeleteModel
@{
    ViewData["Title"] = "Eliminar Arancel";
}

<h2 class="text-danger mb-3">Confirmar eliminación</h2>

<div class="alert alert-warning">
    <strong>¿Estás seguro de eliminar este arancel?</strong>
    <p>Esta acción no se puede deshacer.</p>
</div>

<div class="border rounded p-4 bg-light shadow-sm mb-3">
    <dl class="row mb-0">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Arancel.Id</dd>

        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Arancel.Nombre</dd>

        <dt class="col-sm-3">Monto</dt>
        <dd class="col-sm-9">$@string.Format("{0:N0}", Model.Arancel.Monto)</dd>

        <dt class="col-sm-3">Carrera</dt>
        <dd class="col-sm-9">@Model.Arancel.Carrera?.Nombre</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Arancel.Id" />
    <button type="submit" class="btn btn-danger me-2">
        <i class="bi bi-trash"></i> Eliminar definitivamente
    </button>
    <a asp-page="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancelar
    </a>
</form>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
