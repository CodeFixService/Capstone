@page
@model SmartFlow.Web.Pages.Admin.Aranceles.CreateModel
@{
    ViewData["Title"] = "Crear Arancel";
}

<h2 class="mb-3">Nuevo Arancel</h2>

<form method="post" class="border rounded p-4 shadow-sm">
    <div class="mb-3">
        <label asp-for="Arancel.Nombre" class="form-label">Nombre</label>
        <input asp-for="Arancel.Nombre" class="form-control" />
        <span asp-validation-for="Arancel.Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Arancel.Monto" class="form-label">Monto ($)</label>
        <input asp-for="Arancel.Monto" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Arancel.Monto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Arancel.Descripcion" class="form-label">Descripción</label>
        <textarea asp-for="Arancel.Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Arancel.Descripcion" class="text-danger"></span>
    </div>

    <!-- 🔹 Selector de carrera -->
    <div class="mb-3">
        <label asp-for="Arancel.CarreraId" class="form-label">Carrera Asociada</label>
        <select asp-for="Arancel.CarreraId" asp-items="Model.CarrerasSelectList" class="form-select">
            <option value="">Seleccione una carrera...</option>
        </select>
        <span asp-validation-for="Arancel.CarreraId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-save"></i> Guardar
    </button>
    <a asp-page="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
