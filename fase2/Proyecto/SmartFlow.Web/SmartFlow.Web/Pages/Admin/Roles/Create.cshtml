@page
@model SmartFlow.Web.Pages.Admin.Roles.CreateModel
@{
    ViewData["Title"] = "Crear Rol";
}

<h2 class="mb-3">Nuevo Rol</h2>

<form method="post" class="border rounded p-4 shadow-sm">
    <div class="mb-3">
        <label asp-for="Rol.Nombre" class="form-label">Nombre del Rol</label>
        <input asp-for="Rol.Nombre" class="form-control" />
        <span asp-validation-for="Rol.Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Rol.Descripcion" class="form-label">Descripción</label>
        <textarea asp-for="Rol.Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Rol.Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
