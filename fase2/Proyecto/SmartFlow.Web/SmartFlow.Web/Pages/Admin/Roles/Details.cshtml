@page "{id:int}"
@model SmartFlow.Web.Pages.Admin.Roles.DetailsModel
@{
    ViewData["Title"] = "Detalles del Rol";
}

<h2 class="mb-3">Detalles del Rol</h2>

<div class="border rounded p-4 shadow-sm bg-light">
    <dl class="row mb-0">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.Rol.Id</dd>

        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Rol.Nombre</dd>

        <dt class="col-sm-3">Descripción</dt>
        <dd class="col-sm-9">@Model.Rol.Descripcion</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-page="Edit" asp-route-id="@Model.Rol.Id" class="btn btn-warning me-2">Editar</a>
    <a asp-page="Index" class="btn btn-secondary">Volver al listado</a>
</div>
