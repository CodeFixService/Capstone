@page "{id:int}"
@model SmartFlow.Web.Pages.Admin.Solicitudes.DetailsModel
@{
    ViewData["Title"] = "Detalle de Solicitud";
}

<div class="container-fluid py-4" style="max-width: 90%; margin: auto;">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-center text-white fw-semibold"
             style="background: linear-gradient(90deg, #007bff, #00b4d8); font-size: 1.4rem;">
            @ViewData["Title"]
        </div>

        <div class="card-body bg-white" style="padding: 2%; min-height: 60vh;">
            @if (Model.Solicitud != null)
            {
                <dl class="row">
                    <dt class="col-sm-3">ID Solicitud:</dt>
                    <dd class="col-sm-9">@Model.Solicitud.Id</dd>

                    <dt class="col-sm-3">Usuario:</dt>
                    <dd class="col-sm-9">@Model.Solicitud.Usuario?.Nombre</dd>

                    <dt class="col-sm-3">Servicio:</dt>
                    <dd class="col-sm-9">@Model.Solicitud.Servicio?.Nombre</dd>

                    <dt class="col-sm-3">Fecha de Creación:</dt>
                    <dd class="col-sm-9">@Model.Solicitud.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-3">Estado:</dt>
                    <dd class="col-sm-9">@Model.Solicitud.Estado</dd>

                    <dt class="col-sm-3">Descripción:</dt>
                    <dd class="col-sm-9">@Model.Solicitud.Descripcion</dd>
                </dl>
            }
            else
            {
                <p class="text-center text-muted">No se encontró la solicitud.</p>
            }
        </div>

        <div class="card-footer bg-light text-center py-3">
            <a asp-page="Index" class="btn btn-secondary btn-sm">Volver al listado</a>
            <a asp-page="Edit" asp-route-id="@Model.Solicitud.Id" class="btn btn-primary btn-sm">Editar</a>
        </div>
    </div>
</div>
