@page
@model SmartFlow.Web.Pages.Admin.Solicitudes.IndexModel
@{
    ViewData["Title"] = "Mantenedor de Solicitudes";
}

<h2 class="mb-3">Solicitudes Registradas</h2>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Asunto</th>
            <th>Usuario</th>
            <th>Servicio</th>
            <th>Estado</th>
            <th>Fecha</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.ListaSolicitudes != null && Model.ListaSolicitudes.Count > 0)
        {
            foreach (var solicitud in Model.ListaSolicitudes)
            {
                <tr>
                    <td>@solicitud.Id</td>
                    <td>@solicitud.Asunto</td>
                    <td>@solicitud.Usuario?.Nombre</td>
                    <td>@solicitud.Servicio?.Nombre</td>
                    <td>
                        @if (solicitud.Estado == "Aprobada")
                        {
                            <span class="badge bg-success">Aprobada</span>
                        }
                        else if (solicitud.Estado == "Rechazada")
                        {
                            <span class="badge bg-danger">Rechazada</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pendiente</span>
                        }
                    </td>
                    <td>@solicitud.FechaCreacion.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        <a asp-page="Details" asp-route-id="@solicitud.Id" class="btn btn-sm btn-outline-info me-1" title="Detalles">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-page="Edit" asp-route-id="@solicitud.Id" class="btn btn-sm btn-outline-warning me-1" title="Editar Estado">
                            <i class="bi bi-check2-square"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@solicitud.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">No hay solicitudes registradas.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
