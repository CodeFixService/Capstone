@page
@model SmartFlow.Web.Pages.Admin.Solicitudes.IndexModel
@{
    ViewData["Title"] = "Mantenedor de Solicitudes";
}

<h2 class="mb-3">Solicitudes Registradas</h2>
<form method="get" class="d-flex flex-wrap align-items-center mb-3 gap-2">
    <select name="CarreraFiltro" class="form-select w-auto">
        <option value="">-- Filtrar por Carrera --</option>
        @foreach (var carrera in Model.ListaSolicitudes
                .Select(s => s.Usuario?.Carrera?.Nombre)
                .Where(n => !string.IsNullOrEmpty(n))
                .Distinct())
        {
            <option value="@carrera" selected="@(Model.CarreraFiltro == carrera)">
                @carrera
            </option>
        }
    </select>

    <select name="EstadoFiltro" class="form-select w-auto">
        <option value="">-- Filtrar por Estado --</option>
        <option value="Pendiente" selected="@(Model.EstadoFiltro == "Pendiente")">Pendiente</option>
        <option value="Aprobada" selected="@(Model.EstadoFiltro == "Aprobada")">Aprobada</option>
        <option value="Rechazada" selected="@(Model.EstadoFiltro == "Rechazada")">Rechazada</option>
    </select>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-funnel"></i> Aplicar
    </button>

    <a asp-page="./Index" class="btn btn-outline-secondary">
        <i class="bi bi-x-circle"></i> Limpiar
    </a>
</form>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Asunto</th>
            <th>Usuario</th>
            <th>Servicio</th>
            <th>Estado</th>
            <th>Fecha</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody id="tablaSolicitudes">
        @if (Model.ListaSolicitudes != null && Model.ListaSolicitudes.Count > 0)
        {
            foreach (var solicitud in Model.ListaSolicitudes)
            {
                <tr data-id="@solicitud.Id">
                    <td>@solicitud.Id</td>
                    <td>@solicitud.Asunto</td>
                    <td>@solicitud.Usuario?.Nombre</td>
                    <td>@solicitud.Servicio?.Nombre</td>
                    <td>
                        @if (solicitud.Estado == "Aprobada")
                        {
                            <span class="badge bg-success">Aprobada</span>
                        }
                        else if (solicitud.Estado == "Rechazada")
                        {
                            <span class="badge bg-danger">Rechazada</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pendiente</span>
                        }
                    </td>
                    <td>@solicitud.FechaCreacion.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        <a asp-page="Details" asp-route-id="@solicitud.Id" class="btn btn-sm btn-outline-info me-1" title="Detalles">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-page="Edit" asp-route-id="@solicitud.Id" class="btn btn-sm btn-outline-warning me-1" title="Editar Estado">
                            <i class="bi bi-check2-square"></i>
                        </a>
                       
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">No hay solicitudes registradas.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script>
        function refrescarEstados() {
            fetch(window.location.pathname + "?handler=Estados")
                .then(r => r.json())
                .then(result => {

                    result.data.forEach(item => {

                        // buscar la fila por data-id
                        const fila = document.querySelector(`tr[data-id="${item.id}"]`);
                        if (!fila) return;

                        // buscar la columna estado (5ta columna)
                        const colEstado = fila.children[4];

                        // reemplazar contenido según estado
                        if (item.estado === "Aprobada")
                            colEstado.innerHTML = "<span class='badge bg-success'>Aprobada</span>";
                        else if (item.estado === "Rechazada")
                            colEstado.innerHTML = "<span class='badge bg-danger'>Rechazada</span>";
                        else
                            colEstado.innerHTML = "<span class='badge bg-warning text-dark'>Pendiente</span>";
                    });

                })
                .catch(err => console.log("Error autoupdate:", err));
        }

        // refresca solo ESTADO cada 10 segundos
        setInterval(refrescarEstados, 10000);
    </script>




}
