@page
@model SmartFlow.Web.Pages.Coordinador.Ayuda.IndexModel
@{
    ViewData["Title"] = "Ayuda - Conversaciones del Coordinador";
}

<h2 class="mb-3 text-center fw-semibold">💬 Conversaciones de tu Carrera</h2>

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header text-white fw-semibold"
         style="background:linear-gradient(90deg,#198754,#00b894);font-size:1.2rem;">
         Conversaciones de Estudiantes y Administrador de tu Carrera
    </div>

    <div class="card-body bg-white p-4">
        @if (Model.Conversaciones != null && Model.Conversaciones.Any())
        {
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Nombre</th>
                        <th>Rol</th>
                        <th>Último mensaje</th>
                        <th>Fecha</th>
                        <th>Sin leer</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model.Conversaciones)
                    {
                        <tr>
                            <td>@c.Nombre</td>
                            <td>
                                @if (c.Rol == "Admin")
                                {
                                    <span class="badge bg-primary">Administrador</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Estudiante</span>
                                }
                            </td>
                            <td>@c.UltimoTexto</td>
                            <td>@c.FechaUltimo:g</td>
                            <td>
                                @if (c.NoLeidos > 0)
                                {
                                    <span class="badge bg-danger">@c.NoLeidos</span>
                                }
                                else
                                {
                                    <span class="text-muted">0</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-success"
                                   asp-page="/Coordinador/Ayuda/Ver"
                                   asp-route-usuarioId="@c.UsuarioId">
                                    <i class="bi bi-chat-dots"></i> Abrir
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info text-center mb-0">
                No hay conversaciones registradas aún.
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.js"></script>
}
