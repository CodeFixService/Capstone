@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartFlow.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartFlow.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
    @{
        var sesion = HttpContextAccessor?.HttpContext?.Session;
        var rol = sesion?.GetString("UsuarioRol");

        var nombre = sesion?.GetString("UsuarioNombre");
        var isLogged = !string.IsNullOrEmpty(rol);
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">SmartFlow</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- ===== MENÚ IZQUIERDO ===== -->
                    <ul class="navbar-nav flex-grow-1">

                        @if (isLogged)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Index">Inicio</a>
                            </li>

                            <!-- ==== ADMIN ==== -->
                            @if (rol == "Admin")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        Administración
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li><a class="dropdown-item" asp-page="/Admin/Usuarios/Index">Usuarios</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Roles/Index">Roles</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Carreras/Index">Carreras</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Servicios/Index">Servicios</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Aranceles/Index">Aranceles</a></li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Calendario/Index">Calendario Global</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Solicitudes/Index">Solicitudes</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Notificaciones/Nueva">Enviar notificación</a></li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Ayuda/Index">Ayuda (Chat)</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Reportes/Index">Reportes</a></li>

                                    </ul>
                                </li>
                            }

                            <!-- ==== USUARIO ==== -->
                            @if (rol == "Usuario")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="usuarioDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        Mi Cuenta
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="usuarioDropdown">

                                        <li><a class="dropdown-item" asp-page="/Usuario/Calendario/Index">Calendario</a></li>
                                        <li><a class="dropdown-item" asp-page="/Usuario/Solicitudes/Index">Mis Solicitudes</a></li>

                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-page="/Usuario/Perfil/Editar">Editar Perfil</a></li>
                                        <li><a class="dropdown-item" asp-page="/Usuario/Ayuda/Index">Ayuda</a></li>
                                    </ul>
                                </li>
                            }
                            <!-- ==== Director ==== -->
                            @if (rol == "Director")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="DirectorDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        Mi Cuenta
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="DirectorDropdown">

                                        
                                        <li><a class="dropdown-item" asp-page="/Admin/Servicios/Index">Servicios</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Aranceles/Index">Aranceles</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Solicitudes/Index">Solicitudes</a></li>                                           
                                        <li><a class="dropdown-item" asp-page="/Admin/Notificaciones/Nueva">Enviar notificación</a></li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Reportes/Index">Reportes Generales</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Ayuda/Index">Ayuda (Chat)</a></li>
                                        
                                    </ul>
                                </li>
                            }
                            <!-- ==== Coordinador ==== -->
                            @if (rol == "Coordinador")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="CoordinadorDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        Gestión Académica
                                    </a>

                                    <ul class="dropdown-menu" aria-labelledby="CoordinadorDropdown">

                                        <li><a class="dropdown-item" asp-page="/Admin/Aranceles/Index">Aranceles</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Servicios/Index">Servicios</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Calendario/Index">Calendario Global</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Solicitudes/Index">Solicitudes</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Notificaciones/Nueva">Enviar notificación</a></li>                                       
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Ayuda/Index">Ayuda (Chat)</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Reportes/Index">Reportes</a></li>
                                    </ul>
                                </li>
                            }
                        }

                        @if (!isLogged)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Login/Login">Iniciar sesión</a>
                            </li>
                        }
                    </ul>

                    <!-- ===== MENÚ DERECHO ===== -->
                    <ul class="navbar-nav align-items-center">

                        @* 🔔 Icono de notificaciones (solo si hay sesión) *@
                        @if (isLogged)
                        {
                            <li class="nav-item me-3">
                                @await Html.PartialAsync("_NotificacionesPartial")
                            </li>
                        }

                        @* 👋 Saludo + Logout *@
                        @if (isLogged)
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-3 text-dark">
                                    Hola, <strong>@(string.IsNullOrEmpty(nombre) ? "Usuario" : nombre)</strong> (@rol)
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-page="/Login/Logout">
                                    <i class="bi bi-box-arrow-right"></i> Cerrar sesión
                                </a>
                            </li>
                            <li class="nav-item ms-3">
                                <button id="btnActualizar" class="btn btn-outline-primary btn-sm fw-bold">
                                    <i class="bi bi-arrow-clockwise"></i> Actualizar
                                </button>
                            </li>


                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SmartFlow.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function actualizarSecciones() {
            const secciones = document.querySelectorAll("[data-dynamic='true']");
            if (secciones.length === 0) return; // Evita errores si no hay secciones
            secciones.forEach(sec => {
                const url = sec.getAttribute("data-url");
                if (url) {
                    fetch(url)
                        .then(resp => resp.text())
                        .then(html => sec.innerHTML = html)
                        .catch(err => console.error("Error al actualizar sección:", err));
                }
            });
        }

        document.getElementById("btnActualizar")?.addEventListener("click", actualizarSecciones);
        setInterval(actualizarSecciones, 10000);
    </script>





    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
