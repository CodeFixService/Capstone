@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartFlow.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartFlow.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
    @{
        var sesion = HttpContextAccessor?.HttpContext?.Session;
        var rol = sesion?.GetString("UsuarioRol");

        var nombre = sesion?.GetString("UsuarioNombre");
        var isLogged = !string.IsNullOrEmpty(rol);
    }
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">

                <!-- LOGO -->
                <a class="navbar-brand fw-bold" asp-page="/Index">SmartFlow</a>

                <!-- BOTÓN RESPONSIVE -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- MENÚ IZQUIERDO -->
                    <ul class="navbar-nav me-auto">

                        @if (isLogged)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index">Inicio</a>
                            </li>

                            <!-- ADMIN -->
                            @if (rol == "Admin")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        Administración
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-page="/Admin/Calendario/Index">Calendario</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Solicitudes/Index">Solicitudes</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Notificaciones/Nueva">Notificación</a></li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Usuarios/Index">Usuarios</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Roles/Index">Roles</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Carreras/Index">Carreras</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Servicios/Index">Servicios</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Aranceles/Index">Aranceles</a></li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Bitacora/Index">Registro</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Reportes/Index">Reportes</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Index">Dashboard</a></li>
                                    </ul>
                                </li>
                            }

                            <!-- USUARIO -->
                            @if (rol == "Usuario")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        Mi Cuenta
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-page="/Usuario/Calendario/Index">Calendario</a></li>
                                        <li><a class="dropdown-item" asp-page="/Usuario/Solicitudes/Index">Solicitudes</a></li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-page="/Usuario/Perfil/Editar">Editar Perfil</a></li>
                                        <li><a class="dropdown-item" asp-page="/Usuario/Ayuda/Index">Chat</a></li>
                                    </ul>
                                </li>
                            }

                            <!-- COORDINADOR -->
                            @if (rol == "Coordinador")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        Gestión Académica
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-page="/Coordinador/Calendario/Index">Calendario</a></li>
                                        <li><a class="dropdown-item" asp-page="/Coordinador/Solicitudes/Index">Solicitudes</a></li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-page="/Coordinador/Notificaciones/Nueva">Notificaciones</a></li>
                                        <li><a class="dropdown-item" asp-page="/Coordinador/Reportes/Index">Reportes</a></li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-page="/Coordinador/Ayuda/Index">Chat</a></li>
                                    </ul>
                                </li>
                            }
                        }

                        @if (!isLogged)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Login/Login">Iniciar Sesión</a>
                            </li>
                        }

                    </ul>

                    <!-- MENÚ DERECHO (NOTIFICACIONES Y USUARIO) -->
                    <ul class="navbar-nav ms-auto align-items-center">

                        <!-- CAMPANA -->
                        @if (rol == "Admin" || rol == "Usuario" || rol == "Coordinador")
                        {
                            <li class="nav-item me-2">
                                <partial name="_NotificacionesPartial" />
                            </li>
                        }

                        <!-- SALUDO -->
                        @if (isLogged)
                        {
                            <li class="nav-item d-flex align-items-center me-3">
                                <span class="text-dark small">
                                    Hola, <strong>@(string.IsNullOrEmpty(nombre) ? "Usuario" : nombre)</strong> (@rol)
                                </span>
                            </li>

                            <!-- LOGOUT -->
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-page="/Login/Logout">
                                    <i class="bi bi-box-arrow-right"></i>
                                </a>
                            </li>

                            <!-- BOTÓN REFRESCAR -->
                            <li class="nav-item ms-2">
                                <button id="btnActualizar" class="btn btn-outline-primary btn-sm fw-bold">
                                    <i class="bi bi-arrow-clockwise"></i>
                                </button>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SmartFlow.Web - <a asp-area="" asp-page="/Privacy">Pribacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>

        function actualizarSecciones() {
            const secciones = document.querySelectorAll("[data-dynamic='true']");
            if (secciones.length === 0) return; // Evita errores si no hay secciones
            secciones.forEach(sec => {
                const url = sec.getAttribute("data-url");
                if (url) {
                    fetch(url)
                        .then(resp => resp.text())
                        .then(html => sec.innerHTML = html)
                        .catch(err => console.error("Error al actualizar sección:", err));
                }
            });
        }

        document.getElementById("btnActualizar")?.addEventListener("click", actualizarSecciones);
        setInterval(actualizarSecciones, 10000);
    </script>





    @await RenderSectionAsync("Scripts", required: false)

    <script>
        async function cargarNotificacionesAdmin() {
            try {
                const response = await fetch('/Admin/Notificaciones?handler=Partial');
                const html = await response.text();
                document.getElementById('listaNotificacionesAdmin').innerHTML = html;
            } catch (error) {
                console.error('Error al cargar notificaciones del admin:', error);
            }
        }
    </script>
    <script>
        function marcarLeidaYRedirigir(id, destino) {
            if (!id || id === "undefined") {
                console.error("⚠️ ID de notificación no válido");
                return;
            }

            fetch(destino + "?handler=MarcarLeida&id=" + id)
                .then(res => res.json())
                .then(() => window.location.href = destino)
                .catch(err => console.error("Error al marcar notificación:", err));
        }
    </script>

    @{
        var rolS = Context.Session.GetString("Rol");
        var esUsuario = rolS == "Usuario";
    }

    @if (esUsuario)
    {
        <!-- 🔹 BOTÓN FLOTANTE DE CHAT DE SOPORTE -->
        <a href="/Usuario/Ayuda/Index"
           class="btn btn-primary rounded-circle shadow-lg d-flex justify-content-center align-items-center"
           title="Chat con soporte"
           style="position: fixed;
                  bottom: 25px;
                  right: 25px;
                  width: 60px;
                  height: 60px;
                  background: linear-gradient(135deg, #007bff, #00b4d8);
                  color: white;
                  font-size: 28px;
                  z-index: 9999;">
            <i class="bi bi-headset"></i>
        </a>
    }

</body>
</html>
