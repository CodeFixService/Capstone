@page
@model SmartFlow.Web.Pages.Usuario.Calendario.IndexModel
@{
    ViewData["Title"] = "Calendario de Reservas";
}

<div class="container-fluid py-4" style="max-width: 95%; margin: auto;">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header text-center text-white fw-semibold"
             style="background: linear-gradient(90deg, #007bff, #00b4d8); font-size: 1.4rem;">
            @ViewData["Title"]
        </div>

        <div class="card-body bg-white" style="padding: 2%; min-height: 75vh;">
            <div id="calendar"></div>
        </div>

        <div class="card-footer bg-light text-center small text-muted py-3">
            © 2025 SmartFlow - Todos los derechos reservados
        </div>
    </div>
</div>

<!-- 🔹 Modal de Detalle de Reserva -->
<div class="modal fade" id="detalleReserva" tabindex="-1" aria-labelledby="detalleReservaLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-lg border-0">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-semibold" id="detalleReservaLabel">Detalle de la Reserva</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body" id="detalleReservaBody">
                <!-- Aquí se insertan los detalles desde JS -->
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', async function () {
            const calendarEl = document.getElementById('calendar');

            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'es',
                height: 'auto',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: '/Usuario/Calendario?handler=Eventos',

                // 🔹 CLICK en un evento
                eventClick: function (info) {
                    const esPropio = !info.event.title.includes("Ocupado");

                    // 🚫 Si es “Ocupado”, no muestra modal ni detalle
                    if (!esPropio) {
                        alert("Este horario ya está reservado por otro usuario.");
                        return;
                    }

                    const evento = info.event.extendedProps;
                    const fechaInicio = new Date(info.event.start).toLocaleString();
                    const fechaFin = new Date(info.event.end).toLocaleString();

                    document.getElementById('detalleReservaBody').innerHTML = `
                        <p><strong>Servicio:</strong> ${evento.servicio ?? info.event.title}</p>
                        <p><strong>Inicio:</strong> ${fechaInicio}</p>
                        <p><strong>Fin:</strong> ${fechaFin}</p>
                        <p><strong>Estado:</strong> <span class="badge bg-${
                            info.event.title.includes("Aprobada") ? "success" :
                            info.event.title.includes("Rechazada") ? "danger" : "warning text-dark"
                        }">${info.event.title.match(/\((.*?)\)/)?.[1] ?? "Pendiente"}</span></p>
                        ${evento.comentarioAdmin ? `<p><strong>Comentario del administrador:</strong> ${evento.comentarioAdmin}</p>` : ""}
                    `;
                    new bootstrap.Modal(document.getElementById('detalleReserva')).show();
                },

                eventColor: '#6c757d'
            });

            calendar.render();
        });
    </script>
}
