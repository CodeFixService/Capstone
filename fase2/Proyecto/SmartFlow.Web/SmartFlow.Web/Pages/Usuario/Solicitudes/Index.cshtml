@page
@model SmartFlow.Web.Pages.Usuario.Solicitudes.IndexModel
@{
    ViewData["Title"] = "Mis Solicitudes";
}

<h2 class="mb-3">Mis Solicitudes</h2>

<a asp-page="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Nueva Solicitud
</a>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Asunto</th>
            <th>Servicio</th>
            <th>Estado</th>
            <th>Fecha</th>
            <th>Ver</th>

            

        </tr>
    </thead>
    <tbody>
        @if (Model.ListaSolicitudes != null && Model.ListaSolicitudes.Count > 0)
        {
            foreach (var solicitud in Model.ListaSolicitudes)
            {
                <tr data-id="@solicitud.Id">
                    <td>@solicitud.Id</td>
                    <td>@solicitud.Asunto</td>
                    <td>@solicitud.Servicio?.Nombre</td>
                    <td class="estado-col" id="estado-@solicitud.Id">
                        @if (solicitud.Estado == "Aprobada")
                        {
                            <span class="badge bg-success">Aprobada</span>
                        }
                        else if (solicitud.Estado == "Rechazada")
                        {
                            <span class="badge bg-danger">Rechazada</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pendiente</span>
                        }
                    </td>
                    
                    <td>@solicitud.FechaCreacion.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        <button class="btn btn-outline-info btn-sm ver-detalle"
                                data-id="@solicitud.Id">
                            <i class="bi bi-eye"></i> Ver
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No has enviado solicitudes aún.</td>
            </tr>
        }
    </tbody>
</table>
<!-- Modal para Detalle de Solicitud -->
<div class="modal fade" id="modalDetalleSolicitud" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-lg border-0">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-semibold">Detalle de Solicitud</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body" id="detalleSolicitudBody">
                <!-- Aquí se cargan los datos con JS -->
            </div>

            <div class="modal-footer justify-content-center">
                <button class="btn btn-primary px-4" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script>
        document.addEventListener("DOMContentLoaded", () => {

            document.querySelectorAll(".ver-detalle").forEach(btn => {
                btn.addEventListener("click", async () => {

                    const id = btn.dataset.id;

                    const resp = await fetch(`?handler=Detalle&id=${id}`);
                    const data = await resp.json();

                    if (!data || data.success === false) {
                        alert("No se pudo cargar el detalle de la solicitud.");
                        return;
                    }

                    document.getElementById("detalleSolicitudBody").innerHTML = `
                        <p><strong>Asunto:</strong> ${data.asunto}</p>
                        <p><strong>Descripción:</strong> ${data.descripcion ?? "Sin descripción"}</p>
                        <p><strong>Servicio:</strong> ${data.servicio}</p>
                        <p><strong>Estado:</strong> ${data.estado}</p>
                        <p><strong>Fecha:</strong> ${data.fecha}</p>
                        <hr>
                        <p><strong>Comentario:</strong></p>
                        <p>${data.comentario}</p>
                    `;

                    new bootstrap.Modal(document.getElementById("modalDetalleSolicitud")).show();
                });
            });

        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {

            async function refrescarEstados() {

                try {
                    const resp = await fetch("?handler=Estados");
                    const result = await resp.json();

                    if (!result?.data) return;

                    result.data.forEach(item => {

                        // localizar fila
                        const fila = document.querySelector(`tr[data-id='${item.id}']`);
                        if (!fila) return;

                        // localizar celda del estado
                        const col = fila.querySelector(".estado-col");
                        if (!col) return;

                        // nuevo badge
                        let badge = `<span class="badge bg-warning text-dark">Pendiente</span>`;

                        if (item.estado === "Aprobada")
                            badge = `<span class="badge bg-success">Aprobada</span>`;

                        if (item.estado === "Rechazada")
                            badge = `<span class="badge bg-danger">Rechazada</span>`;

                        // actualizar HTML
                        col.innerHTML = badge;
                    });

                } catch (e) {
                    console.log("Error autorefresco solicitudes:", e);
                }
            }

            // refrescar cada 10 segundos
            setInterval(refrescarEstados, 10000);

        });
    </script>


}
